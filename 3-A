%{
#include <stdio.h>
int count = 0;
%}
%%
[A][a-zA-Z]*    { count++; }
.|\n             { /* ignore other characters */ }
%%
int main() {
    printf("Enter the input (Ctrl+Z then Enter to end):\n");
    yylex();
    printf("\nNumber of words starting with 'A'	: %d\n", count);
    return 0;
}

int yywrap() {
    return 1;
}



